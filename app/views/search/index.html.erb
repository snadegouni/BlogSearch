<h1>Listing blog posts</h1>
<%= link_to 'Admin click here to create new posts', admin_index_path %>

<%= form_with scope: :criteria,url: search_show_path,local: true do |form| %>
<p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>
 
  <p>
    <%= form.submit "Search blog"%>
  </p>
<% end %>

<ul id="posts">
  <%= render partial: 'search/post', collection: @posts %>
</ul>
